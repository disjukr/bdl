{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "BDL",
  "scopeName": "source.bdl",
  "patterns": [
    {
      "include": "#statements"
    },
    {
      "include": "#attributes"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    }
  ],
  "repository": {
    "statements": {
      "patterns": [
        {
          "include": "#enum-statement"
        },
        {
          "include": "#import-statement"
        },
        {
          "include": "#oneof-statement"
        },
        {
          "include": "#proc-statement"
        },
        {
          "include": "#scalar-statement"
        },
        {
          "include": "#socket-statement"
        },
        {
          "include": "#struct-statement"
        },
        {
          "include": "#union-statement"
        }
      ]
    },
    "enum-statement": {
      "name": "meta.statement.enum.bdl",
      "patterns": [
        {
          "begin": "\\b(enum)\\b\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*\\{",
          "beginCaptures": {
            "1": {
              "name": "storage.type.enum.bdl"
            },
            "2": {
              "name": "entity.name.type.enum.bdl"
            }
          },
          "patterns": [
            {
              "include": "#comments"
            },
            {
              "include": "#attributes"
            },
            {
              "match": "(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)",
              "name": "variable.other.enummember.bdl"
            }
          ],
          "end": "\\}"
        },
        {
          "match": "\\b(enum)\\b\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)",
          "captures": {
            "1": {
              "name": "storage.type.enum.bdl"
            },
            "2": {
              "name": "entity.name.type.enum.bdl"
            }
          }
        }
      ]
    },
    "import-statement": {
      "name": "meta.statement.import.bdl",
      "patterns": [
        {
          "begin": "\\b(import)\\b",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.import.bdl"
            }
          },
          "end": "\\}",
          "patterns": [
            {
              "include": "#comments"
            },
            {
              "begin": "\\{",
              "end": "(?=\\})",
              "patterns": [
                {
                  "include": "#comments"
                },
                {
                  "name": "punctuation.comma.bdl",
                  "match": ","
                },
                {
                  "name": "keyword.control.as.bdl",
                  "match": "\\bas\\b"
                },
                {
                  "name": "variable.other.bdl",
                  "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
              ]
            }
          ]
        }
      ]
    },
    "oneof-statement": {
      "name": "meta.statement.oneof.bdl",
      "patterns": [
        {
          "begin": "\\b(oneof)\\b\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*\\{",
          "beginCaptures": {
            "1": {
              "name": "storage.type.oneof.bdl"
            },
            "2": {
              "name": "entity.name.type.oneof.bdl"
            }
          },
          "patterns": [
            {
              "include": "#comments"
            },
            {
              "include": "#attributes"
            },
            {
              "patterns": [
                {
                  "match": "(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*(?:\\[\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*\\])?",
                  "captures": {
                    "1": {
                      "name": "entity.name.type.bdl"
                    },
                    "2": {
                      "name": "entity.name.type.bdl"
                    }
                  }
                }
              ]
            }
          ],
          "end": "\\}"
        },
        {
          "match": "\\b(oneof)\\b\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)",
          "captures": {
            "1": {
              "name": "storage.type.oneof.bdl"
            },
            "2": {
              "name": "entity.name.type.oneof.bdl"
            }
          }
        }
      ]
    },
    "proc-statement": {
      "name": "meta.statement.proc.bdl",
      "patterns": [
        {
          "match": "\\b(proc)\\b\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*=?\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)?\\s*(?:\\[\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*\\])?\\s*(?:->)?\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)?\\s*(?:\\[\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*\\])?\\s*(\\bthrows\\b)?\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)?\\s*(?:\\[\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*\\])?",
          "captures": {
            "1": {
              "name": "storage.type.proc.bdl"
            },
            "2": {
              "name": "entity.name.type.proc.bdl"
            },
            "3": {
              "name": "entity.name.type.req.bdl"
            },
            "4": {
              "name": "entity.name.type.req.bdl"
            },
            "5": {
              "name": "entity.name.type.res.bdl"
            },
            "6": {
              "name": "entity.name.type.res.bdl"
            },
            "7": {
              "name": "storage.modifier.throws.bdl"
            },
            "8": {
              "name": "entity.name.type.err.bdl"
            },
            "9": {
              "name": "entity.name.type.err.bdl"
            }
          }
        }
      ]
    },
    "scalar-statement": {
      "name": "meta.statement.scalar.bdl",
      "patterns": [
        {
          "match": "\\b(scalar)\\b\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*(?:=\\s*(?:(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*(?:\\[\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)?\\s*\\])?)?)?",
          "captures": {
            "1": {
              "name": "storage.type.bdl"
            },
            "2": {
              "name": "entity.name.type.bdl"
            },
            "3": {
              "name": "entity.name.type.bdl"
            },
            "4": {
              "name": "entity.name.type.bdl"
            }
          }
        }
      ]
    },
    "socket-statement": {
      "name": "meta.statement.socket.bdl",
      "patterns": [
        {
          "match": "\\b(socket)\\b\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*=?\\s*(?:(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*(?:\\[\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)?\\s*\\])?)?\\s*(?:<->)?\\s*(?:(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*(?:\\[\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)?\\s*\\])?)?",
          "captures": {
            "1": {
              "name": "storage.type.socket.bdl"
            },
            "2": {
              "name": "entity.name.type.socket.bdl"
            },
            "3": {
              "name": "entity.name.type.server.bdl"
            },
            "4": {
              "name": "entity.name.type.server.bdl"
            },
            "5": {
              "name": "entity.name.type.client.bdl"
            },
            "6": {
              "name": "entity.name.type.client.bdl"
            }
          }
        }
      ]
    },
    "struct-statement": {
      "name": "meta.statement.struct.bdl",
      "patterns": [
        {
          "begin": "\\b(struct)\\b\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*\\{",
          "beginCaptures": {
            "1": {
              "name": "storage.type.struct.bdl"
            },
            "2": {
              "name": "entity.name.type.struct.bdl"
            }
          },
          "patterns": [
            {
              "include": "#comments"
            },
            {
              "include": "#attributes"
            },
            {
              "include": "#struct-field"
            }
          ],
          "end": "\\}"
        },
        {
          "match": "\\b(struct)\\b\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)",
          "captures": {
            "1": {
              "name": "storage.type.struct.bdl"
            },
            "2": {
              "name": "entity.name.type.struct.bdl"
            }
          }
        }
      ]
    },
    "struct-field": {
      "patterns": [
        {
          "match": "(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*\\??\\s*:\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*(?:\\[\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*\\])?",
          "captures": {
            "1": {
              "name": "variable.other.property.bdl"
            },
            "2": {
              "name": "entity.name.type.bdl"
            },
            "3": {
              "name": "entity.name.type.bdl"
            }
          }
        },
        {
          "match": "(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)",
          "name": "variable.other.property.bdl"
        }
      ]
    },
    "union-statement": {
      "name": "meta.statement.union.bdl",
      "patterns": [
        {
          "begin": "\\b(union)\\b\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*\\{",
          "beginCaptures": {
            "1": {
              "name": "storage.type.union.bdl"
            },
            "2": {
              "name": "entity.name.type.union.bdl"
            }
          },
          "patterns": [
            {
              "include": "#comments"
            },
            {
              "include": "#attributes"
            },
            {
              "begin": "(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)\\s*\\(",
              "beginCaptures": {
                "1": {
                  "name": "entity.name.type.bdl"
                }
              },
              "patterns": [
                {
                  "include": "#comments"
                },
                {
                  "include": "#attributes"
                },
                {
                  "include": "#struct-field"
                }
              ],
              "end": "\\)"
            },
            {
              "match": "(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)",
              "name": "entity.name.type.bdl"
            }
          ],
          "end": "\\}"
        },
        {
          "match": "\\b(union)\\b\\s*(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)",
          "captures": {
            "1": {
              "name": "storage.type.union.bdl"
            },
            "2": {
              "name": "entity.name.type.union.bdl"
            }
          }
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "meta.attribute.oneliner.bdl",
          "match": "(@|#)(?: |([^ \\n]))?([^\\-\\n]*)(?:-(?: |([^ \\n]))([^\\n]*))",
          "captures": {
            "1": {
              "name": "keyword.control.begin.attribute.bdl"
            },
            "2": {
              "name": "invalid.illegal.attribute.bdl"
            },
            "3": {
              "name": "entity.other.attribute-name.attribute.bdl"
            },
            "4": {
              "name": "invalid.illegal.attribute.bdl"
            },
            "5": {
              "name": "string.attribute.bdl"
            }
          }
        },
        {
          "name": "meta.attribute.multiline.bdl",
          "begin": "(@|#)(?: |([^ \\n]))?([^\\n]*)",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.begin.attribute.bdl"
            },
            "2": {
              "name": "invalid.illegal.attribute.bdl"
            },
            "3": {
              "name": "entity.other.attribute-name.attribute.bdl"
            }
          },
          "end": "^(?![ \\t]*\\|)",
          "patterns": [
            {
              "match": "[ \\t]*(\\|)(?: |([^ \\n]))?([^\\n]*)",
              "captures": {
                "1": {
                  "name": "keyword.other.pipe.attribute.bdl"
                },
                "2": {
                  "name": "invalid.illegal.attribute.bdl"
                },
                "3": {
                  "name": "string.attribute.bdl"
                }
              }
            }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.bdl",
          "match": "//.*(?:\\n|$)"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.import.bdl",
          "match": "\\b(import)\\b"
        },
        {
          "name": "storage.type.bdl",
          "match": "\\b(scalar|enum|oneof|union|struct|rpc|socket)\\b"
        }
      ]
    }
  }
}
