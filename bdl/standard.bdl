# standard - conventional

struct BdlStandard {
  name?: string,
  description?: string,
  primitives: Primitive[string], // key: primitive identifier
  attributes?: Attributes[AttributeSlot],
}

struct Primitive {
  name?: string,
  description?: string,
}

struct Attribute {
  key: string,
  name?: string,
  description?: string,
}

custom Attributes = Attribute[]

enum AttributeSlot {
  @ value - bdl.module
  Module,

  @ value - bdl.enum
  Enum,

  @ value - bdl.enum.item
  EnumItem,

  @ value - bdl.import
  Import,

  @ value - bdl.oneof
  Oneof,

  @ value - bdl.oneof.item
  OneofItem,

  @ value - bdl.proc
  Proc,

  @ value - bdl.custom
  Custom,

  @ value - bdl.struct
  Struct,

  @ value - bdl.struct.field
  StructField,

  @ value - bdl.union
  Union,

  @ value - bdl.union.item
  UnionItem,
}
